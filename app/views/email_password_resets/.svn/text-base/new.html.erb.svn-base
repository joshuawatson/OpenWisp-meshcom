<div class="grid_6 prefix_3 suffix_3">
  <div class="box">
    <div class="block" id="forgot_password">
      <% form_tag email_password_resets_path do %>
        <fieldset>
          <legend><%=t :Forgot_password %></legend>
          <p>
            <%=t :Forgot_password_description_email %>
            <br />
            <b><label><%=t :Email %></label></b>
            <br />
            <%= text_field_tag "email_password_reset_email", {}, :name => 'email_password_reset[email]' %>
          </p>
          <p>
            <%= submit_tag t(:Reset_password), :class => 'submit' %>
          </p>
        </fieldset>
      <% end %>
    </div>
  </div>
</div>
<div class="clear"></div>