<%= content_for :data_url, email_password_resets_path %>

<% content_for :header do %>
    <h1><%=t :Recover %></h1>
<% end %>

<% content_for :back do %>
    <%= mobile_link_back_to new_password_reset_path %>
<% end %>

<% form_tag email_password_resets_path, 'data-ajax' => false do %>
    <ul data-role="listview" data-inset="true">
      <li data-role="fieldcontain">
        <%=t :Forgot_password_description_email_for_mobile %>
      </li>

      <li data-role="fieldcontain">
        <label><%=t :Email %></label>
        <%= text_field_tag "email_password_reset_email", {}, :name => 'email_password_reset[email]' %>
      </li>

      <li data-role="fieldcontain">
        <%= submit_tag t(:Reset) %>
      </li>
    </ul>
<% end %>
