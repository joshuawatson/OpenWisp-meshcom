<%= link_to '<-Torna all\'applicazione', operator_path(current_operator) %>
<h1>Listing cpe_templates</h1>
<table>
  <tr>
    <th>Name</th>
    <th>Template</th>
    <th>Active</th>
  </tr>

<% @cpe_templates.each do |cpe_template| %>
  <tr>
    <td><%=h cpe_template.name %></td>
    <td><%=h cpe_template.template %></td>
    <td><%=h cpe_template.active %></td>
    <td><%= link_to 'Show', cpe_template %></td>
    <td><%= link_to 'Edit', edit_cpe_template_path(cpe_template) %></td>
    <td><%= link_to 'Destroy', cpe_template, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nuovo template', new_cpe_template_path %>
